server {
    listen 80;
    server_name _;

    # Redirect to HTTPS if you have TLS configured; otherwise remove this block.
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name _;

    # ssl_certificate /etc/ssl/certs/your.crt;
    # ssl_certificate_key /etc/ssl/private/your.key;
    # include /etc/ssl/options-ssl-nginx.conf;

    # Static web build
    root /var/www/chat/apps/web/dist;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # WebSocket proxy to Node server (listening 127.0.0.1:3001)
    location /ws {
        proxy_pass http://127.0.0.1:3001/ws;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_read_timeout 60s;
    }

    # Optional: increase limits for assets
    client_max_body_size 10m;
}


