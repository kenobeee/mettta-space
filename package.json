{
  "name": "chat",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal audio chat stack: web (Vite+React+TS), server (Node+WS), desktop (Electron).",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/web",
    "apps/server",
    "apps/desktop",
    "packages/shared"
  ],
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "scripts": {
    "dev:web": "npm --workspace web run dev",
    "build:web": "npm --workspace web run build",
    "dev:server": "npm --workspace server run dev",
    "start:server": "npm --workspace server run start",
    "dev:desktop": "npm --workspace desktop run dev",
    "build:desktop": "npm --workspace web run build && npm --workspace desktop run build:installers"
  }
}
